{
    "$schema": "https://raw.githubusercontent.com/ManualForArchipelago/Manual/main/schemas/Manual.options.schema.json",
    "_comment": "Add a _ before an option name to comment it out and it wont be added to the apworld",
    "core": {
        "goal":{
            "display_name": "Final Zone Clear",
            "description": "How to End your Randomized playthrough.",
            "aliases": {"easiest": 0},
            "hidden": false
        },
        "death_link": {
            "default": false
        },
        "filler_traps": {
            "values": {
                "recommended": 0,
                "default": 20
            }
        }
    },
    "user": {
        "randomize_movesets":{
            "display_name": "Randomize Movesets",
            "description": [
                "Randomize the available S1F Movesets?",
                " ",
                "This will shuffle all of Sonic's toggleable moves",
                "Tails', Knuckles' and Amy's base moveset.",
                "You'll be forced to start with no moves if you enable this."
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sonic Forever"
        },
        "super_form":{
            "display_name": "Super Form",
            "description": [
                "Allows Sonic and co. to go super.",
                "This'll add a 7th Chaos Emerald and Super Cancel into the pool."
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sonic Forever"
        },
        "extra_special_stages":{
            "display_name": "Extra Special Stages",
            "description": [
                "Adds the extra two special stages as checks. [2 Locations]"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sonic Forever"
        },
        "boss_rush":{
            "display_name": "Boss Rush",
            "description": [
                "Adds Sky Base Zone as an available zone to clear. [4 Locations]"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sonic Forever"
        },
        "golf":{
            "display_name": "Golf Forever",
            "description": [
                "Adds the Golf Forever Mode and its holes as checks. [36 Locations]"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sonic Forever"
        },
        "achievements":{
            "display_name": "Achievements",
            "description": [
                "Adds the game's various achievements as checks. [19 Locations]"
            ],
            "type": "Toggle",
            "default": true,
            "group": "Sonic Forever"
        },
        "epilogue_expansion":{
            "display_name": "Epilogue Expansion",
            "description": [
                "CURRENTLY UNDERCONSTRUCTION",
                "DO NOT ENABLE"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Epilogue Expansion"
        }
    }
}