{
    "$schema": "https://raw.githubusercontent.com/ManualForArchipelago/Manual/main/schemas/Manual.options.schema.json",
    "_comment": "Add a _ before an option name to comment it out and it wont be added to the apworld",
    "core": {
        "goal":{
            "display_name": "End Game",
            "description": "Gather the 10 Gamma parts and fight Eclipse!",
            "aliases": {"easiest": 0},
            "hidden": false
        },
        "death_link": {
            "default": false
        },
        "filler_traps": {
            "_comment": "Using values here let you set a 'recommended' filler_trap percentage or even a default percentage",
            "values": {
                "recommended": 0
            }
        }
    },
    "user": {
        "random_weapon_start":{
            "display_name": "Random Weapon",
            "description": [
                "Gives a random weapon at start."
            ],
            "type": "Toggle",
            "default": false,
            "group": "Starting Items"
        },
        "random_item_start":{
            "display_name": "Random Item",
            "description": [
                "Gives a random item at start."
            ],
            "type": "Toggle",
            "default": false,
            "group": "Starting Items"
        },
        "enable_minibosses":{
            "display_name": "Minibosses Toggle",
            "description": [
                "Adds the mid chapter bosses as checks. (8 Locations)"
            ],
            "type": "Toggle",
            "default": true,
            "group": "Bosses"
        },
        "enable_optional_bosses":{
            "display_name": "Optional Bosses Toggle",
            "description": [
                "Adds the secret/optional bosses as checks. (5 Locations)"
            ],
            "type": "Toggle",
            "default": true,
            "group": "Bosses"
        },
        "shopsanity":{
            "display_name": "shopsanity",
            "description": [
                "Adds the shop purchase checks and shop stock items. (CURRENTLY NOT WORKING)"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Shop"
        }
    }
}