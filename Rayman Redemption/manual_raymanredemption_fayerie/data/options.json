{
    "$schema": "https://raw.githubusercontent.com/ManualForArchipelago/Manual/main/schemas/Manual.options.schema.json",
    "_comment": "Add a _ before an option name to comment it out and it wont be added to the apworld",
    "core": {
        "goal":{
            "_comment": [
                "Using 'goal' as the name of an option let you override some of the generated goal parameters"
            ],
            "display_name": "End Goal",
            "description": "What's the goal for Rayman to clear?",
            "aliases": {"easiest": 0},
            "hidden": false
        },
        "death_link": {
            "default": false
        },
        "filler_traps": {
            "_comment": "Using values here let you set a 'recommended' filler_trap percentage or even a default percentage",
            "default": 20,
            "values": {
                "recommended": 10
            }
        }
    },
    "user": {
        "dark_legacy_toggle":{
            "display_name": "Dark Legacy",
            "description": [
                "Enable Dark Legacy? (Please disable this if you're only gonna defeat Mr. Dark's Darker Form, or generation WILL fail)"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Goal Related"
        },
        "start_with_extras":{
            "display_name": "Random Extra Access",
            "description": [
                "Start with all Extra areas?"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Starting Items"
        },
        "start_with_pink_helpers":{
            "display_name": "Random Pink Helpers",
            "description": [
                "Start with all Pink Helpers?"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Starting Items"
        },
        "start_with_gifts":{
            "display_name": "Random Gifts",
            "description": [
                "Start with all NPC gifts?"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Starting Items"
        },
        "start_with_shop_bonuses":{
            "display_name": "Shop Bonuses",
            "description": [
                "Start with the shop bonuses item?"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Starting Items"
        },
        "enable_skin_items":{
            "display_name": "Skin Items",
            "description": [
                "Adds the various skins to the pool as extra filler. (34 Items)"
            ],
            "type": "Toggle",
            "default": true,
            "group": "Skins"
        },
        "betillasanity":{
            "display_name": "betillasanity",
            "description": [
                "Adds Betilla's health upgrades as checks. (4 Locations)"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sanity Options"
        },
        "shopsanity":{
            "display_name": "shopsanity",
            "description": [
                "Adds the purchasable items from The Shop and Joe's Wares as checks. (36 Locations)"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sanity Options"
        },
        "casinosanity":{
            "display_name": "casinosanity",
            "description": [
                "Adds the rewards and three-in-a-row slots from The Casino as checks. (9 Locations)"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sanity Options"
        },
        "darkmagiciansanity":{
            "display_name": "darkmagiciansanity",
            "description": [
                "Adds the cages from the Dark Magician's Challenge. (10 Locations)"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sanity Options"
        },
        "bossrushsanity":{
            "display_name": "bossrushsanity",
            "description": [
                "Adds consecutive boss rush wins as checks. (8 Locations)"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sanity Options"
        },
        "truebossrushsanity":{
            "display_name": "truebossrushsanity",
            "description": [
                "Adds consecutive true boss rush wins as checks. (21 Locations)"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sanity Options"
        },
        "achievementsanity":{
            "description": [
                "Adds the game's achievements as locations. (38 Locations)"
            ],
            "type": "Toggle",
            "default": false,
            "group": "Sanity Options"
        }
    }
}